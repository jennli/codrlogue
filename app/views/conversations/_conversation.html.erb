<div class="container">

  <li class="list-group-item clearfix">
    <%= fa_icon('weixin') %> <%= render 'conversations/participants', conversation: conversation %>
    <% if conversation.is_unread?(current_user) %>
    <font color='red'> NEW Message!</font>
    <%end %>
    <div class="btn-group-vertical pull-right">
      <div class="btn-group-vertical pull-right">
        <% if conversation.is_trashed?(current_user) %>
        <%= link_to 'Restore', restore_conversation_path(conversation), class: 'btn btn-xs btn-info', method: :post %>
        <% else %>
        <%= link_to fa_icon("trash"), conversation_path(conversation), class: 'btn btn-xs btn-default', method: :delete,
        data: {confirm: 'Are you sure?'} %>
        <% end %>
      </div>
    </div>

    <p> <%= link_to conversation.subject, conversation_path(conversation), class: :badge %></p>

    <p><%= conversation.last_message.body %>
      <small>(<span class="text-muted"><%= conversation.last_message.created_at.strftime("%-d %B %Y, %H:%M:%S") %></span>)</small></p>
    </li>

  </div>
