
<div class="container">

  
  <%= form_tag user_contact_send_path do %>

    <div class="row">
      <div class="col-xs-6 col-md-4 col-lg-offset-1">
        <fieldset class="form-group">
          <%= label_tag :email, "Contact Email" %>
          <%= email_field_tag :email, nil, class: "form-control", placeholder: "example@email.com" %>
        </fieldset>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1">
        <fieldset class="form-group">
          <%= label_tag :body, "Message" %>
          <%= text_area_tag :body, nil, class: "form-control", placeholder: "Send an email to let this person know you are interested!" %>
        </fieldset>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 col-lg-offset-1">
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
          <i class="fa fa-send"></i>  Email <%= @user.first_name %>
        <% end %>
      </div>
    </div>

  <% end %>

  
</div>



