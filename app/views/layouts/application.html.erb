<!DOCTYPE html>
<html>
<head>
  <title>Codrlogue</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand">
          <%=link_to( image_tag('logo.png', height: '100', width: '425'), root_path, :class=>"brand") %>
        </a>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="main-navbar">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "HOME", root_path %></li>
          <% if user_signed_in? %>
          <li><%= link_to "#{current_user.full_name}'s Profile", user_path(current_user)%></li>
          <li><%= link_to "SIGN OUT", sessions_path, method: :delete %></li>
          <li><%= link_to has_unread_messages?? (fa_icon('envelope') + " new msg!") : fa_icon('envelope'), conversations_path %>
          </li>

          <% else %>
          <li><%= link_to "NEW USER", new_user_path %></li>
          <li><%= link_to "LOG IN", new_session_path %></li>
          <% end %>
        </ul>

        <% if user_signed_in? && current_user.admin %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Administrator", admin_path(get_admin_random_string) %></li>
        </ul>
        <% end %>
      </div>
    </div>
  </nav>

  <% if notice %>
  <div class="alert fade in alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4><%= notice %></h4>
  </div>

  <% elsif alert %>
  <div class="alert fade in alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4><%= alert %></h4>
  </div>
  <% end %>

  <%= yield %>

</body>
</html>
