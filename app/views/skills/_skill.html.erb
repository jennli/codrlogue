<div id="<%= dom_id(skill) %>">
  <%= skill.title %>
  <%= skill.rating %>
  <%= skill.category.name %>
  <% if can? :destroy, skill %>
  <%= link_to "Delete", skill_path(skill),
                        method: :delete,
                        remote: true,
                        data: {confirm: "Are you sure?"} %>
  <% end %>
</div>
