<div id="education-form">
  <%= simple_form_for @education, remote: true do |f| %>

  <div class="form-group">
    <%= f.input :school_name %>
  </div>
  <div class="form-group">
    <%= f.input :school_link %>
  </div>
  <div class="form-group">
    <%= f.input :grade_year, order: [:month, :year], discard_hour: true, start_year: 1980, end_year: Date.today.year %>
  </div>
  <div class="form-group">
    <%= f.input :level, as: :select, collection: Education::VALID_EDUCATION_LEVELS %>
  </div>
  <div class="form-group">
    <%= f.input :field %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary btn-sm" %>
  </div>
  <% end %>
</div>
