
  <div class="well well-sm">
    <%= simple_form_for @user do |f| %>
      <%= f.input :first_name%>
      <%= f.input :last_name %>
      <%= f.input :email%>
      <%= f.input :password %>
      <%= f.input :password_confirmation, label: 'Confirm Password' %>
      <%= f.input :summary %>
      <%= f.input :description %>
      <%= f.label 'Social Media' %>
      <%= f.input :linkedin, as: :url, label: "LinkedIn Username" %>
      <%= f.input :github, as: :url, label: "GitHub Username" %>
      <%= f.input :twitter, as: :url, label: "Twitter Username" %>
      <%= f.label "Available for recruiting?" %>
      <%= f.check_box :is_available %>
      <%= f.input :image %>
      <%= f.input :attachment %>
      <%= f.submit class: "btn btn-primary btn-sm" %>
      <% end %>
    </div>
  </div>
