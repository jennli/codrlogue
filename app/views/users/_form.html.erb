
<%= simple_form_for @user do |f| %>
<%= f.input :first_name %>
<%= f.input :last_name %>
<%= f.input :email %>
<%= f.input :password %>
<%= f.input :password_confirmation %>
<%= f.input :summary %>
<%= f.input :description %>
<%= f.input :is_available,   as: :check_boxes %>
<%= f.submit class: "btn btn-primary" %>
<% end %>
