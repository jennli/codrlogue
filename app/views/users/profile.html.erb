<h1>Edit Profile</h1>

<% @user = User.find 1 %>

<%= simple_form_for @user do |f| %>

<div class="form-group">
  <%= f.input :skills %>
</div>
<div class="form-group">
  <%= f.collection_select :category_id, Category.order(:name), :id, :name %>
</div>
<div class="form-group">
  <%= f.submit class: "btn btn-primary btn-sm" %>
</div>
<% end %>
