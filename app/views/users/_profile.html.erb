          <%# byebug %>
          <%= render 'projects/form' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h4>Educations</h4>
    </div>
    <div class="panel-body">
      <div class="educations">
