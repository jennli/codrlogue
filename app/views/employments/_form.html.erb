<%= simple_form_for @employment, remote: true do |f| %>
  <div class="form-group">
    <%= f.input :job_title %>
  </div>
  <div class="form-group">
    <%= f.input :location %>
  </div>
  <div class="form-group">
    <%= f.input :start_year, order: [:month, :year], discard_hour: true %>
    <%# collection: (1980..2016) %>
  </div>
  <div class="form-group">
    <%= f.input :end_year, order: [:month, :year], discard_hour: true %>
    <%# collection: (1980..2016) %>
  </div>
  <div class="form-group">
    <%= f.input :summary %>
  </div>
  <div class="form-group">
    <%= f.association :company %>
  </div>
  <div class="form-group">
    <%= f.submit "Add New Skill", class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
